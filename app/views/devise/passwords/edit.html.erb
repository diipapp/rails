<div class="enter-new-password-page-container">
  <h3 class="information-text">Here we go!</h3>
  <p class="information-description">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
  
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    
    <%= f.password_field :password, autocomplete: "new-password", class: "auth-input", placeholder: "NEW PASSWORD" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input", placeholder: "REPEAT PASSWORD" %>

    <button type="submit" name="commit" id="confirm-btn">CHANGE</button>

    <%= render "devise/shared/error_messages", resource: resource %>
  <% end %>


</div>