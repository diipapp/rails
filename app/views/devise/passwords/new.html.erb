<h1 class="title">diip</h1>
  <h3 class="information-text"><%= _('Please, put your account email') %></h3>
  <p class="information-description"><%= _('Weâ€™ll send an email with the instructions') %></p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.email_field :email, autocomplete: "email", class: "auth-input", placeholder: "E-mail" %>
